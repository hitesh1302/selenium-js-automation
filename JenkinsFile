pipeline {
    agent any

    tools {
        nodejs "NodeJS"  // ðŸ‘ˆ make sure to configure NodeJS tool in Jenkins
    }

    triggers {
        githubPush()  // run pipeline on GitHub push/merge
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/hitesh1302/selenium-js-automation.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run your test runner (Mocha/Jest/etc.)
                sh 'npm test || true'   // prevents pipeline from breaking immediately
            }
            post {
                always {
                    // Pick up JUnit reports if you output XML
                    junit allowEmptyResults: true, testResults: 'test-results/*.xml'
                }
            }
        }

        stage('Generate Report') {
            steps {
                // If your test runner outputs HTML/PDF report, copy it here
                sh 'mkdir -p report && cp -r test-reports/* report/ || true'
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Build ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <p><b>Build Status:</b> ${currentBuild.currentResult}</p>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>Build Number:</b> ${env.BUILD_NUMBER}</p>
                    <p><a href="${env.BUILD_URL}">View Console Output</a></p>
                """,
                to: "hiteshkumawat1302@gmail.com",
                attachmentsPattern: "report/*.html"
            )
        }
    }
}
