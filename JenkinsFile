pipeline {
    agent any

    tools {
        nodejs "NodeJS"
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/hitesh1302/selenium-js-automation.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            stage('Run Tests') {
    steps {
        // run tests but donâ€™t fail pipeline
        sh 'npm test || true'
    }
    post {
        always {
            junit allowEmptyResults: true, testResults: 'test-results/*.xml'
        }
    }
}

            }
        }

        stage('Generate Report') {
            steps {
                sh '''
                    mkdir -p report
                    npx mochawesome-merge mochawesome-report/*.json > mochawesome.json || true
                    npx marge mochawesome.json --reportDir report --inline || true
                '''
            }
        }
    }

    post {
    always {
        archiveArtifacts artifacts: 'report/*', fingerprint: true

        publishHTML([
            allowMissing: false,
            alwaysLinkToLastBuild: true,
            keepAll: true,
            reportDir: 'report',
            reportFiles: 'mochawesome.html',
            reportName: 'Mochawesome Report'
        ])

        emailext(
            subject: "Build ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: """
                <p><b>Build Status:</b> ${currentBuild.currentResult}</p>
                <p><b>Job:</b> ${env.JOB_NAME}</p>
                <p><b>Build Number:</b> ${env.BUILD_NUMBER}</p>
                <p><a href="${env.BUILD_URL}">View Console Output</a></p>
                <p><a href="${env.BUILD_URL}artifact/report/mochawesome.html">View Test Report</a></p>
            """,
            to: "hiteshkumawat1302@gmail.com",
            attachmentsPattern: "report/*.html"
        )
    }
}

}
