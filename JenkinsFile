pipeline {
    agent any

    tools {
        nodejs "NodeJS"
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/hitesh1302/selenium-js-automation.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test || true'
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'test-results/*.xml'
                }
            }
        }

        stage('Generate Mochawesome Report') {
            steps {
                sh '''
                    mkdir -p report
                    if ls mochawesome-report/*.json 1> /dev/null 2>&1; then
                        npx mochawesome-merge mochawesome-report/*.json > mochawesome.json
                        npx marge mochawesome.json --reportDir report --inline
                    else
                        echo "⚠️ No mochawesome JSON files found, skipping report generation."
                    fi
                '''
            }
        }
    }

    post {
    always {
        echo ">>> Sending email with report..."
        emailext (
            to: 'hiteshkumawat1302@gmail.com',
            subject: "Build #${env.BUILD_NUMBER} - ${currentBuild.currentResult}",
            body: """
                Hello Team,<br><br>
                The build <b>#${env.BUILD_NUMBER}</b> finished with status: <b>${currentBuild.currentResult}</b>.<br><br>
                <a href="${env.BUILD_URL}">Click here for full console log</a><br>
                <a href="${env.BUILD_URL}testReport">Click here for JUnit Report</a><br>
                <a href="${env.BUILD_URL}artifact/report/mochawesome.html">Click here for Mochawesome Report</a><br><br>
                Regards,<br>
                Jenkins
            """,
            mimeType: 'text/html',
            attachmentsPattern: 'report/mochawesome.html'
            echo ">>> Reached here"
        )
        echo ">>> Email sent."
    }
}

}
